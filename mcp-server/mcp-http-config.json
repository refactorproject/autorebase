{
  "mcpServers": {
    "autorebase-http": {
      "command": "node",
      "args": ["/path/to/autorebase/mcp-server/dist/index.js"],
      "env": {
        "MCP_TRANSPORT": "http",
        "MCP_PORT": "3000",
        "GITHUB_TOKEN": "your_github_token_here",
        "OPENAI_API_KEY": "your_openai_api_key_here"
      }
    },
    "autorebase-stdio": {
      "command": "node", 
      "args": ["/path/to/autorebase/mcp-server/dist/index.js"],
      "env": {
        "GITHUB_TOKEN": "your_github_token_here",
        "OPENAI_API_KEY": "your_openai_api_key_here"
      }
    }
  }
}
